{
  "name": "typescript-api-demo",
  "version": "1.0.0",
  "description": "Comprehensive TypeScript API demo for CI/CD training",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:performance": "npm run test:perf:light",
    "test:perf:light": "artillery run tests/performance/scenarios/light-load.yml",
    "test:perf:moderate": "artillery run tests/performance/scenarios/moderate-load.yml",
    "test:perf:heavy": "artillery run tests/performance/scenarios/heavy-load.yml",
    "test:perf:memory": "node --inspect tests/performance/scripts/memory-profiler.js",
    "test:perf:regression": "node tests/performance/scripts/regression-detector.js",
    "test:perf:baseline": "node tests/performance/scripts/baseline-recorder.js",
    "perf:dashboard": "node tests/performance/scripts/dashboard-updater.js && echo 'ðŸ“Š Dashboard updated at tests/performance/dashboard/performance-dashboard-live.html'",
    "perf:monitor": "node tests/performance/scripts/dashboard-updater.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts"
  },
  "keywords": [
    "typescript",
    "api",
    "express",
    "docker",
    "ci-cd",
    "training"
  ],
  "author": "CI/CD Training Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "artillery": "^2.0.24",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
